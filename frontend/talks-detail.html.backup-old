<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Talk Episode - NeoSharX</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: #ffffff;
            color: #000000;
        }
        .video-container {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
            background: #000;
        }
        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        .section-title {
            font-size: 14px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #666;
            margin-bottom: 12px;
            padding-bottom: 8px;
            border-bottom: 2px solid #e0e0e0;
        }
        .info-row {
            display: flex;
            padding: 10px 0;
            border-bottom: 1px solid #f0f0f0;
        }
        .info-label {
            font-weight: 600;
            width: 180px;
            color: #555;
        }
        .info-value {
            flex: 1;
            color: #000;
            word-break: break-all;
        }
        .speaker-card {
            background: #f9f9f9;
            border: 1px solid #e0e0e0;
            padding: 20px;
            margin-bottom: 15px;
        }
        .speaker-card h3 {
            font-size: 18px;
            font-weight: 700;
            margin-bottom: 5px;
        }
        .speaker-card .title {
            color: #666;
            font-size: 14px;
            margin-bottom: 10px;
        }
        .speaker-card .bio {
            color: #444;
            line-height: 1.6;
            margin-bottom: 10px;
        }
        .social-links a {
            display: inline-block;
            margin-right: 15px;
            color: #000;
            text-decoration: none;
            font-weight: 600;
        }
        .social-links a:hover {
            text-decoration: underline;
        }
        .takeaway-item {
            padding: 12px;
            background: #f5f5f5;
            border-left: 3px solid #000;
            margin-bottom: 10px;
        }
        .back-button {
            display: inline-block;
            padding: 10px 20px;
            background: #000;
            color: #fff;
            text-decoration: none;
            font-weight: 600;
        }
        .back-button:hover {
            background: #333;
        }
    </style>
</head>
<body>
    <div id="nav-container"></div>

    <!-- Loading State -->
    <div id="loadingState" class="text-center py-12">
        <div class="inline-block animate-spin rounded-full h-12 w-12 border-4 border-black border-t-transparent"></div>
        <p class="mt-4 text-gray-600">Loading episode...</p>
    </div>

    <!-- Error State -->
    <div id="errorState" class="hidden text-center py-12">
        <p class="text-red-600 text-lg mb-4">Episode not found</p>
        <a href="talks-dynamic.html" class="back-button">Back to Episodes</a>
    </div>

    <!-- Episode Content -->
    <div id="episodeContent" class="hidden">
        <div class="max-w-6xl mx-auto px-4 py-8">
            <!-- Back Button -->
            <a href="talks-dynamic.html" class="back-button">← Back to Episodes</a>

            <!-- Episode Header -->
            <div class="my-8">
                <div class="mb-2">
                    <span id="episodeNumber" class="text-sm font-bold tracking-wider uppercase bg-black text-white px-3 py-1"></span>
                </div>
                <h1 id="episodeTitle" class="text-4xl font-bold mb-4"></h1>
                <p id="episodeHeader" class="text-xl text-gray-700 mb-6"></p>
            </div>

            <!-- Episode Info Table -->
            <div class="mb-8">
                <div class="section-title">EPISODE INFORMATION</div>
                <div class="info-row">
                    <div class="info-label">Episode number:</div>
                    <div class="info-value" id="infoEpisodeNumber"></div>
                </div>
                <div class="info-row">
                    <div class="info-label">Title:</div>
                    <div class="info-value" id="infoTitle"></div>
                </div>
                <div class="info-row">
                    <div class="info-label">Slug:</div>
                    <div class="info-value" id="infoSlug"></div>
                </div>
                <div class="info-row">
                    <div class="info-label">Header:</div>
                    <div class="info-value" id="infoHeader"></div>
                </div>
                <div class="info-row">
                    <div class="info-label">YouTube URL:</div>
                    <div class="info-value">
                        <a id="infoYoutubeUrl" href="#" target="_blank" class="text-blue-600 hover:underline"></a>
                    </div>
                </div>
                <div class="info-row">
                    <div class="info-label">YouTube embed URL:</div>
                    <div class="info-value">
                        <a id="infoYoutubeEmbedUrl" href="#" target="_blank" class="text-blue-600 hover:underline"></a>
                    </div>
                </div>
                <div class="info-row">
                    <div class="info-label">Thumbnail URL:</div>
                    <div class="info-value">
                        <a id="infoThumbnailUrl" href="#" target="_blank" class="text-blue-600 hover:underline"></a>
                    </div>
                </div>
                <div class="info-row">
                    <div class="info-label">Duration (minutes):</div>
                    <div class="info-value" id="infoDuration"></div>
                </div>
                <div class="info-row">
                    <div class="info-label">Published at:</div>
                    <div class="info-value" id="infoPublishedAt"></div>
                </div>
                <div class="info-row">
                    <div class="info-label">Is published:</div>
                    <div class="info-value" id="infoIsPublished"></div>
                </div>
            </div>

            <!-- Video Player -->
            <div class="mb-8">
                <div class="section-title">VIDEO</div>
                <div class="video-container" id="videoContainer"></div>
            </div>

            <!-- Description -->
            <div class="mb-8">
                <div class="section-title">DESCRIPTION</div>
                <div id="episodeDescription" class="text-gray-800 leading-relaxed whitespace-pre-wrap"></div>
            </div>

            <!-- Key Takeaways -->
            <div id="keyTakeawaysSection" class="mb-8">
                <div class="section-title">KEY TAKEAWAYS</div>
                <div id="keyTakeawaysList"></div>
            </div>

            <!-- Speakers -->
            <div id="speakersSection" class="mb-8">
                <div class="section-title">SPEAKER PANELS</div>
                <div id="speakersList"></div>
            </div>

            <!-- Comments Section -->
            <div class="mt-12">
                <div class="section-title">COMMENTS</div>
                <div id="comments-container"></div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-16">
        <div class="max-w-6xl mx-auto px-4 py-8">
            <div class="flex flex-col md:flex-row justify-between items-center gap-6">
                <div class="flex items-center gap-2">
                    <div class="text-2xl font-bold">NeoSharX</div>
                </div>
                <div class="flex gap-6">
                    <a href="#" class="text-sm text-gray-600 hover:text-black">About</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-black">Contact</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-black">Terms of Service</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-black">Privacy Policy</a>
                </div>
                <p class="text-sm text-gray-600">© 2023 NeoSharX. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        const API_BASE_URL = 'http://localhost:8001/api/auth';

        function getSlugFromURL() {
            const params = new URLSearchParams(window.location.search);
            return params.get('slug');
        }

        async function loadEpisode() {
            const loadingState = document.getElementById('loadingState');
            const errorState = document.getElementById('errorState');
            const episodeContent = document.getElementById('episodeContent');

            try {
                const slug = getSlugFromURL();
                if (!slug) {
                    throw new Error('No slug provided');
                }

                console.log('Loading episode with slug:', slug);
                const response = await fetch(`${API_BASE_URL}/talk-episodes/slug/${slug}/`);
                
                if (!response.ok) {
                    throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                }

                const episode = await response.json();
                console.log('Episode loaded:', episode);

                renderEpisode(episode);

                loadingState.classList.add('hidden');
                episodeContent.classList.remove('hidden');

                // Initialize comment system
                initializeCommentSystem(slug);

            } catch (error) {
                console.error('Error loading episode:', error);
                loadingState.classList.add('hidden');
                errorState.classList.remove('hidden');
            }
        }

        function renderEpisode(episode) {
            // Header
            document.getElementById('episodeNumber').textContent = `Episode ${episode.episode_number}`;
            document.getElementById('episodeTitle').textContent = episode.title;
            document.getElementById('episodeHeader').textContent = episode.header;

            // Episode Info Table
            document.getElementById('infoEpisodeNumber').textContent = episode.episode_number;
            document.getElementById('infoTitle').textContent = episode.title;
            document.getElementById('infoSlug').textContent = episode.slug;
            document.getElementById('infoHeader').textContent = episode.header;
            
            document.getElementById('infoYoutubeUrl').textContent = episode.youtube_url;
            document.getElementById('infoYoutubeUrl').href = episode.youtube_url;
            
            document.getElementById('infoYoutubeEmbedUrl').textContent = episode.youtube_embed_url;
            document.getElementById('infoYoutubeEmbedUrl').href = episode.youtube_embed_url;
            
            document.getElementById('infoThumbnailUrl').textContent = episode.thumbnail_url;
            document.getElementById('infoThumbnailUrl').href = episode.thumbnail_url;
            
            document.getElementById('infoDuration').textContent = `${episode.duration_minutes} minutes`;
            
            const publishedDate = new Date(episode.published_at);
            document.getElementById('infoPublishedAt').textContent = publishedDate.toLocaleString('en-US', {
                month: 'short',
                day: 'numeric',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
            
            document.getElementById('infoIsPublished').innerHTML = episode.is_published 
                ? '<span class="text-green-600 font-bold">✓ Yes</span>' 
                : '<span class="text-red-600 font-bold">✗ No</span>';

            // Video Player
            const videoContainer = document.getElementById('videoContainer');
            videoContainer.innerHTML = `<iframe src="${episode.youtube_embed_url}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>`;

            // Description
            document.getElementById('episodeDescription').textContent = episode.description;

            // Key Takeaways
            if (episode.key_takeaways && episode.key_takeaways.length > 0) {
                const takeawaysHtml = episode.key_takeaways.map(takeaway => 
                    `<div class="takeaway-item">${takeaway}</div>`
                ).join('');
                document.getElementById('keyTakeawaysList').innerHTML = takeawaysHtml;
            } else {
                document.getElementById('keyTakeawaysSection').style.display = 'none';
            }

            // Speakers
            if (episode.speaker_panels && episode.speaker_panels.length > 0) {
                const speakersHtml = episode.speaker_panels.map(speaker => `
                    <div class="speaker-card">
                        <h3>${speaker.name}</h3>
                        <div class="title">${speaker.title}</div>
                        <div class="bio">${speaker.bio}</div>
                        ${speaker.social_links ? `
                            <div class="social-links">
                                ${speaker.social_links.linkedin ? `<a href="${speaker.social_links.linkedin}" target="_blank">LinkedIn →</a>` : ''}
                                ${speaker.social_links.twitter ? `<a href="${speaker.social_links.twitter}" target="_blank">Twitter →</a>` : ''}
                            </div>
                        ` : ''}
                    </div>
                `).join('');
                document.getElementById('speakersList').innerHTML = speakersHtml;
            } else {
                document.getElementById('speakersSection').style.display = 'none';
            }

            // Update page title
            document.title = `${episode.title} - NeoSharX Talks`;
        }

        function initializeCommentSystem(slug) {
            const commentSystem = new CommentSystem(
                'talk_episode',
                slug,
                'comments-container',
                {
                    apiBaseUrl: 'http://localhost:8001/api/auth',
                    showLoginPrompt: true,
                    enableReplies: true,
                    enableLikes: true,
                }
            );
        }

        // Load navigation
        fetch('navigation.html')
            .then(res => res.text())
            .then(html => {
                document.getElementById('nav-container').innerHTML = html;
            })
            .catch(err => console.error('Navigation load error:', err));

        // Load episode on page load
        document.addEventListener('DOMContentLoaded', loadEpisode);
    </script>

    <!-- Comment System -->
    <script src="comment-system.js"></script>
</body>
</html>
