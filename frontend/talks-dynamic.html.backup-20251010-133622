    <script>
      const API_BASE_URL = "http://localhost:8000/api/auth";
      let allEpisodes = [];
      let filteredEpisodes = [];

      async function loadEpisodes() {
        const loadingState = document.getElementById("loadingState");
        const errorState = document.getElementById("errorState");

        try {
          console.log(
            "Fetching episodes from:",
            `${API_BASE_URL}/talk-episodes/`
          );
          const response = await fetch(`${API_BASE_URL}/talk-episodes/`);
          console.log("Response status:", response.status);

          if (!response.ok) throw new Error("Failed to fetch episodes");

          const data = await response.json();
          console.log("Received data:", data);

          allEpisodes = data.episodes || data;
          console.log("Total episodes:", allEpisodes.length);

          filteredEpisodes = [...allEpisodes];

          loadingState.classList.add("hidden");
          renderEpisodes();
        } catch (error) {
          console.error("Error loading episodes:", error);
          loadingState.classList.add("hidden");
          errorState.classList.remove("hidden");
        }
      }

      function renderEpisodes() {
        const featuredContainer = document.getElementById("featuredEpisode");
        const moreEpisodesContainer = document.getElementById("moreEpisodes");
        const emptyState = document.getElementById("emptyState");

        console.log(
          "Rendering episodes. Total filtered:",
          filteredEpisodes.length
        );

        if (filteredEpisodes.length === 0) {
          console.log("No episodes to display - showing empty state");
          featuredContainer.classList.add("hidden");
          moreEpisodesContainer.innerHTML = "";
          emptyState.classList.remove("hidden");
          return;
        }

        emptyState.classList.add("hidden");

        // Render featured episode (latest one)
        const featured = filteredEpisodes[0];
        if (featured) {
          console.log("Rendering featured episode:", featured.title);
          featuredContainer.innerHTML = renderFeaturedEpisode(featured);
          featuredContainer.classList.remove("hidden");
        }

        // Render more episodes (exclude featured)
        const moreEpisodes = filteredEpisodes.slice(1);
        console.log("Rendering additional episodes:", moreEpisodes.length);
        moreEpisodesContainer.innerHTML = moreEpisodes
          .map((episode) => renderEpisodeCard(episode))
          .join("");
      }

      function renderFeaturedEpisode(episode) {
        // Extract YouTube thumbnail from URL
        let thumbnailUrl = episode.thumbnail_url;
        if (!thumbnailUrl && episode.youtube_url) {
          const videoId = extractYouTubeID(episode.youtube_url);
          if (videoId) {
            thumbnailUrl = `https://img.youtube.com/vi/${videoId}/maxresdefault.jpg`;
          }
        }

        return `
          <a href="talks-detail.html?slug=${episode.slug}" class="block group">
            <div class="relative overflow-hidden rounded-xl bg-background-dark dark:bg-background-light h-[400px]">
              <div class="absolute inset-0 bg-cover bg-center transition-transform duration-500 group-hover:scale-105" 
                   style="background-image: url('${thumbnailUrl}')"></div>
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-8">
                <div class="inline-block px-3 py-1 mb-4 text-xs font-bold uppercase tracking-wider bg-primary text-white rounded-full">
                  Episode ${episode.episode_number}
                </div>
                <h2 class="text-3xl md:text-4xl font-bold text-white mb-3 leading-tight">
                  ${episode.title}
                </h2>
                <p class="text-white/90 text-lg mb-4 line-clamp-2">
                  ${episode.header}
                </p>
                <div class="flex items-center gap-4 text-white/80 text-sm">
                  <span>${episode.duration_minutes} min</span>
                  <span>â¢</span>
                  <span>${new Date(episode.published_at).toLocaleDateString(
                    "en-US",
                    { month: "short", day: "numeric", year: "numeric" }
                  )}</span>
                </div>
              </div>
            </div>
          </a>
        `;
      }

      function renderEpisodeCard(episode) {
        let thumbnailUrl = episode.thumbnail_url;
        if (!thumbnailUrl && episode.youtube_url) {
          const videoId = extractYouTubeID(episode.youtube_url);
          if (videoId) {
            thumbnailUrl = `https://img.youtube.com/vi/${videoId}/hqdefault.jpg`;
          }
        }

        return `
          <a href="talks-detail.html?slug=${episode.slug}" class="group">
            <div class="bg-background-light dark:bg-background-dark rounded-xl overflow-hidden border border-subtle-light/20 dark:border-subtle-dark/20 hover:border-primary/50 transition-all duration-300 h-full flex flex-col">
              <div class="relative overflow-hidden h-48">
                <div class="w-full h-full bg-cover bg-center transition-transform duration-500 group-hover:scale-110" 
                     style="background-image: url('${thumbnailUrl}')"></div>
                <div class="absolute top-3 left-3">
                  <span class="px-3 py-1 bg-primary text-white text-xs font-bold rounded-full">
                    Ep ${episode.episode_number}
                  </span>
                </div>
              </div>
              <div class="p-6 flex-grow flex flex-col">
                <h3 class="text-xl font-bold mb-3 line-clamp-2 group-hover:text-primary transition-colors">
                  ${episode.title}
                </h3>
                <p class="text-subtle-light dark:text-subtle-dark text-sm mb-4 line-clamp-3 flex-grow">
                  ${episode.header}
                </p>
                <div class="flex items-center gap-3 text-xs text-subtle-light dark:text-subtle-dark pt-4 border-t border-subtle-light/20 dark:border-subtle-dark/20">
                  <span>${episode.duration_minutes} min</span>
                  <span>â¢</span>
                  <span>${new Date(episode.published_at).toLocaleDateString(
                    "en-US",
                    { month: "short", day: "numeric" }
                  )}</span>
                </div>
              </div>
            </div>
          </a>
        `;
      }

      function extractYouTubeID(url) {
        const regExp =
          /^.*((youtu.be\/)|(v\/)|(\/u\/\w\/)|(embed\/)|(watch\?))\??v?=?([^#&?]*).*/;
        const match = url.match(regExp);
        return match && match[7].length == 11 ? match[7] : null;
      }

      function applyFilters() {
        const sortFilter = document.getElementById("sortFilter").value;

        // Sort
        if (sortFilter === "episode") {
          filteredEpisodes.sort((a, b) => b.episode_number - a.episode_number);
        } else if (sortFilter === "duration") {
          filteredEpisodes.sort(
            (a, b) => b.duration_minutes - a.duration_minutes
          );
        } else {
          // Recent (default)
          filteredEpisodes.sort(
            (a, b) => new Date(b.published_at) - new Date(a.published_at)
          );
        }

        renderEpisodes();
      }

      // Event listeners
      document
        .getElementById("sortFilter")
        .addEventListener("change", applyFilters);

      // Load navigation
      fetch("navigation.html")
        .then((res) => res.text())
        .then((html) => {
          document.getElementById("nav-container").innerHTML = html;
          document.body.setAttribute("data-page", "talks-dynamic");
        })
        .catch((err) => console.error("Navigation load error:", err));

      // Load episodes on page load
      document.addEventListener("DOMContentLoaded", loadEpisodes);
    </script>
  </body>
</html>
