{
  "name": "neosharx-frontend",
  "version": "1.0.0",
  "description": "NeoSharX Frontend Application",
  "main": "index.html",
  "homepage": ".",
  "scripts": {
    "start": "python3 -m http.server 8000",
    "dev": "npm run build-css && python3 -m http.server 8000",
    "clean": "rimraf dist",
    "build-css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build-css-prod": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "build:copy": "cp index.html dist/ && cp -r assets dist/ && cp -r auth dist/ && cp navigation.html dist/ && cp global-auth.js dist/",
    "build": "npm run clean && npm run build-css-prod && npm run build:copy",
    "deploy": "npm run build",
    "serve": "python3 -m http.server 8000",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "neosharx",
    "frontend",
    "web",
    "application"
  ],
  "author": "NeoSharX Team",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/container-queries": "^0.1.1",
    "copy-files-from-to": "^3.2.1",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
